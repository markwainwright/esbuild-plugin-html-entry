{
  "name": "esbuild-plugin-html-entry",
  "description": "esbuild plugin that allows HTML files to be used as entry points",
  "version": "0.0.0",
  "author": "Mark Wainwright",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markwainwright/esbuild-plugin-html-entry.git"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "build": "./build.sh",
    "check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && eslint && tsc --noEmit",
    "prepare": "npm run build",
    "test:coverage": "c8 node --test --test-reporter spec --import tsx/esm test/test.ts",
    "test:update": "rm -rf test/output/{actual,expected}/* && npm test > /dev/null ; cp -r test/output/actual/* test/output/expected/",
    "test:watch": "node --test --watch --import=tsx/esm test/test.ts",
    "test": "node --test --import tsx/esm test/test.ts test/esm/test.mjs test/cjs/test.cjs"
  },
  "dependencies": {
    "@types/html-minifier-terser": "^7.0.2",
    "cheerio": "^1.0.0",
    "html-minifier-terser": "^7.2.0"
  },
  "peerDependencies": {
    "esbuild": ">= 0.19.5 < 0.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.7.0",
    "c8": "^10.1.2",
    "dir-compare": "^5.0.0",
    "domelementtype": "^2.3.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "c8": {
    "lines": 95,
    "functions": 100,
    "branch": 95,
    "statements": 95,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/types.ts"
    ],
    "check-coverage": true
  }
}
